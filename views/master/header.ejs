<!DOCTYPE html>
<html>

<head>
    <title>
        <%= `${title || appName} ${subtitle || ''}` %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="<%=publicPath%>css/bootstrap.min.css" rel="stylesheet">
    <link href="<%=publicPath%>vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    <link href="<%=publicPath%>css/agency.min.css" rel="stylesheet">
    <link rel='stylesheet' href='<%=publicPath%>css/custom.css' />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top navbar-shrink" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="<%=url.home()%>">
                <%=appName%>
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <%menu.items.forEach(item => {%>
                        <%if(item.childs.length){%>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle <%=menu.isActive(currentPath, item.path, item.childs) ? 'active' : ''%>" href="#" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                    <%=item.name%>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <%item.childs.forEach(child => {%>
                                        <a class="dropdown-item <%=menu.isActive(currentPath, child.path) ? 'active' : ''%>" href="<%=child.path%>">
                                            <%=child.name%>
                                        </a>
                                        <%})%>
                                </div>
                            </li>
                            <%}else{%>
                                <li class="nav-item">
                                    <a class="nav-link <%=menu.isActive(currentPath, item.path) ? 'active' : ''%>" href="<%=item.path%>">
                                        <%=item.name%>
                                    </a>
                                </li>
                                <%}%>
                                    <%})%>
                </ul>
            </div>
        </div>
    </nav>
    <header class="page-heading">
        <%if(title){%>
            <div class="container">
                <h1>
                    <%=title%>
                        <small>
                            <%=subtitle%>
                        </small>
                </h1>
                <hr>
            </div>
            <%}%>
    </header>
    <div class="main">